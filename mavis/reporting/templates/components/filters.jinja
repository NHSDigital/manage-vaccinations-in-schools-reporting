{% from "radios/macro.jinja" import radios %}
{% from "select/macro.jinja" import select %}
{% from "checkboxes/macro.jinja" import checkboxes %}
{% from "input/macro.jinja" import input %}
{% from "fieldset/macro.jinja" import fieldset %}

{% macro filters(params) %}
<form>
  {% call fieldset({
    "legend": {
      "text": "Filter data",
      "classes": "nhsuk-heading-m filter-container__legend",
      "isPageHeading": false
    },
    "classes": "nhsuk-card filter-container"
  }) %}

    <div class="filter">
      {{ radios({
        "idPrefix": "programme",
        "name": "programme",
        "fieldset": {
          "legend": {
            "text": "Programme",
            "classes": "nhsuk-fieldset__legend--s"
          }
        },
        "items": params.programmes
      }) }}
    </div>

    <div class="filter">
      {{ checkboxes({
        "idPrefix": "gender",
        "name": "gender",
        "fieldset": {
          "legend": {
            "text": "Gender",
            "classes": "nhsuk-fieldset__legend--s"
          }
        },
        "items": params.genders
      }) }}
    </div>

    <div class="filter">
      {{ checkboxes({
        "idPrefix": "year-group",
        "name": "year-group",
        "fieldset": {
          "legend": {
            "text": "Year group",
            "classes": "nhsuk-fieldset__legend--s"
          }
        },
        "items": params.year_groups
      }) }}
    </div>
  {% endcall %}
</form>
{% endmacro %}
